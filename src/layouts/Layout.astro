---
import "@fontsource-variable/fraunces";
import "@fontsource-variable/plus-jakarta-sans";
import { AstroSeo } from "@astrolib/seo";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png?"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png?"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png?"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <AstroSeo
            title="TigerApps - Apps for Princeton Students"
            description="TigerApps is a student-run organization that builds and maintains student-developed web applications used by over 90% of students at Princeton University."
            canonical="https://tigerapps.org"
            openGraph={{
                url: "https://tigerapps.org",
                title: "TigerApps - Apps for Princeton Students",
                site_name: "TigerApps Homepage",
                description:
                    "TigerApps is a student-run organization that builds and maintains student-developed web applications used by over 90% of students at Princeton University.",
                images: [
                    {
                        url: "https://tigerapps.org/og-image.png",
                        width: 1200,
                        height: 630,
                        alt: "TigerApps - Apps for Princeton Students"
                    }
                ]
            }}
        />
    </head>
    <body id="top">
        <slot />
    </body>
</html>

<style is:global lang="postcss">
    html {
        scroll-behavior: smooth;
    }

    body {
        font-family: "Plus Jakarta Sans Variable", system-ui, sans-serif;
        @apply bg-cream text-warm-gray antialiased;
        letter-spacing: -0.01em;
    }

    section {
        scroll-margin: 5rem;
    }

    /* Warm Organic Typography */
    h1,
    h2,
    h3 {
        font-family: "Fraunces Variable", Georgia, serif;
        @apply text-charcoal;
        font-variation-settings: "opsz" 72;
    }

    h1 {
        @apply text-4xl md:text-5xl lg:text-6xl font-medium;
        letter-spacing: -0.02em;
    }

    h2 {
        @apply text-3xl md:text-4xl font-medium;
        letter-spacing: -0.015em;
    }

    h3 {
        @apply text-2xl md:text-3xl font-medium;
        letter-spacing: -0.01em;
    }

    h4 {
        @apply text-charcoal font-semibold text-xl;
    }

    h5 {
        @apply text-charcoal font-medium text-lg;
    }

    p {
        @apply leading-relaxed;
    }

    /* Container utilities */
    .cont {
        @apply max-w-6xl mx-auto px-6 md:px-8 lg:px-16 w-full;
    }

    .constrained {
        @apply w-full mx-auto max-w-5xl;
    }

    /* Unified App Grid */
    .app-grid-unified {
        display: grid;
        gap: 1.5rem;
        grid-template-columns: 1fr;
    }

    @media (min-width: 640px) {
        .app-grid-unified {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (min-width: 1024px) {
        .app-grid-unified {
            grid-template-columns: repeat(3, 1fr);
            gap: 1.75rem;
        }
    }

    /* Featured app size */
    .app-featured {
        grid-column: span 1;
    }

    @media (min-width: 640px) {
        .app-featured {
            grid-column: span 2;
        }
    }

    @media (min-width: 1024px) {
        .app-featured {
            grid-column: span 2;
            grid-row: span 2;
        }
    }

    /* Organic blob decorations */
    .blob {
        position: absolute;
        border-radius: 60% 40% 50% 70% / 50% 60% 40% 50%;
        filter: blur(60px);
        opacity: 0.4;
        pointer-events: none;
    }

    .blob-coral {
        background: linear-gradient(135deg, #FF8B7B 0%, #FFEEE4 100%);
    }

    .blob-sage {
        background: linear-gradient(135deg, #9BB89B 0%, #D4E8D4 100%);
    }

    .blob-peach {
        background: linear-gradient(135deg, #FFEEE4 0%, #FFD9C7 100%);
    }

    /* Entrance animations */
    @keyframes fade-in {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes float {
        0%, 100% {
            transform: translateY(0) rotate(0deg);
        }
        50% {
            transform: translateY(-10px) rotate(2deg);
        }
    }

    .animate-fade-in {
        animation: fade-in 0.6s ease-out forwards;
    }

    .animate-fade-in-up {
        animation: fade-in-up 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
        opacity: 0;
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    /* Respect reduced motion */
    @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }

        html {
            scroll-behavior: auto;
        }
    }
</style>
