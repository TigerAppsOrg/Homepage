---
import { allApps } from "../../utils/apps";
import AppCard from "./ui/AppCard.astro";
---

<section id="apps" class="py-24 bg-cream">
    <div class="cont">
        <div class="text-center mb-16 max-w-2xl mx-auto">
            <h2 class="mb-4">Our Apps</h2>
            <p class="text-warm-gray text-lg">
                Tools built by students, for students. From course planning to
                campus life, we've got you covered.
            </p>
        </div>

        <div class="app-grid-unified constrained">
            {allApps.map(app => <AppCard {...app} />)}
        </div>

        <p class="text-center text-muted mt-16">
            Explore our older projects in the{" "}
            <a
                class="text-coral hover:text-coral-dark underline underline-offset-2 transition-colors"
                href="/archive">
                Archive
            </a>
        </p>
    </div>
</section>
