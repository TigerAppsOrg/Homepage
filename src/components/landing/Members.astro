---
import Image from "astro/components/Image.astro";
import RoleFilter from "./RoleFilter.svelte";
import { pastMembers, companies } from "../../utils/members";
---

<section id="about" class="py-20 bg-light">
    <div class="cont space-y-12">
        <div class="text-center space-y-3 max-w-2xl mx-auto">
            <p
                class="text-pixar-purple font-bold text-sm uppercase tracking-wide">
                Our Team
            </p>
            <h3>
                <span class="rainbow-underline">Meet the Team</span>
            </h3>
        </div>

        <RoleFilter client:load />

        <div class="space-y-16 pt-8">
            <article class="text-center">
                <h4 class="mb-6 text-charcoal">Past Members</h4>
                <div class="flex flex-wrap justify-center gap-2 constrained">
                    {
                        pastMembers.map(member => (
                            <span class="text-sm text-gray bg-white px-3 py-1.5 rounded-full border border-light-mid hover:border-pixar-purple/30 transition-colors">
                                {member}
                            </span>
                        ))
                    }
                </div>
            </article>

            <article class="text-center">
                <h4 class="mb-6 text-charcoal">
                    Our members have gone on to work for...
                </h4>
                <div
                    class="flex flex-wrap justify-center items-center gap-4 constrained">
                    {
                        companies.map(company => (
                            <div class="w-14 h-14 md:w-16 md:h-16 rounded-xl overflow-hidden shadow-pop hover:shadow-pop-hover hover:-translate-y-1 transition-all duration-200">
                                <Image
                                    loading="lazy"
                                    class="w-full h-full object-cover"
                                    src={company[0]}
                                    alt={company[1]}
                                />
                            </div>
                        ))
                    }
                </div>
            </article>
        </div>
    </div>
</section>
