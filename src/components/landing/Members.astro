---
import Image from "astro/components/Image.astro";
import RoleFilter from "./RoleFilter.svelte";
import { pastMembers, companies } from "../../utils/members";
---

<section id="about" class="py-24 bg-warm-white">
    <div class="cont space-y-12">
        <div class="text-center space-y-3 max-w-2xl mx-auto">
            <p class="text-coral font-medium text-sm uppercase tracking-wide">
                Our Team
            </p>
            <h3>Meet the TigerApps Team</h3>
        </div>

        <RoleFilter client:load />

        <div class="space-y-16 pt-8">
            <article class="text-center">
                <h4 class="mb-6 text-charcoal">Past Members</h4>
                <div class="flex flex-wrap justify-center gap-2 constrained">
                    {
                        pastMembers.map(member => (
                            <span class="text-sm text-warm-gray bg-cream px-3 py-1.5 rounded-full border border-peach-dark/20">
                                {member}
                            </span>
                        ))
                    }
                </div>
            </article>

            <article class="text-center">
                <h4 class="mb-6 text-charcoal">
                    Our members have gone on to work for...
                </h4>
                <div
                    class="flex flex-wrap justify-center items-center gap-4 constrained">
                    {
                        companies.map(company => (
                            <div class="w-16 h-16 md:w-20 md:h-20 rounded-organic overflow-hidden shadow-soft hover:shadow-soft-hover transition-shadow duration-300">
                                <Image
                                    loading="lazy"
                                    class="w-full h-full object-cover"
                                    src={company[0]}
                                    alt={company[1]}
                                />
                            </div>
                        ))
                    }
                </div>
            </article>
        </div>
    </div>
</section>
