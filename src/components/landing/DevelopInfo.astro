---
import Image from "astro/components/Image.astro";
import Apply1 from "../../assets/icons/apply-crit1.svg";
import Apply2 from "../../assets/icons/apply-crit2.svg";
import Apply3 from "../../assets/icons/apply-crit3.svg";
---

<section id="develop" class="py-24 bg-peach/50 relative overflow-hidden">
    <!-- Subtle organic blob -->
    <div
        class="blob blob-sage w-[400px] h-[400px] -bottom-32 -right-32 opacity-30">
    </div>

    <div class="cont text-center relative z-10">
        <div class="space-y-3 max-w-2xl mx-auto">
            <p class="text-coral font-medium text-sm uppercase tracking-wide">
                Build with Us
            </p>
            <h3>Create the Next TigerApp</h3>
            <p class="text-warm-gray text-lg leading-relaxed">
                TigerApps hosts and promotes student-developed applications for
                the Princeton community. We handle all costs, maintenance, and
                marketing.
            </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 my-12 max-w-4xl mx-auto">
            <div class="apply-step">
                <div class="apply-icon-wrapper">
                    <Image
                        src={Apply1}
                        alt="Campus impact icon"
                        class="apply-img"
                    />
                </div>
                <p class="text-warm-gray text-sm leading-relaxed">
                    Support student life on campus or benefit a local non-profit
                </p>
            </div>
            <div class="apply-step">
                <div class="apply-icon-wrapper">
                    <Image src={Apply2} alt="Quality icon" class="apply-img" />
                </div>
                <p class="text-warm-gray text-sm leading-relaxed">
                    Be fully functional with no major bugs
                </p>
            </div>
            <div class="apply-step">
                <div class="apply-icon-wrapper">
                    <Image
                        src={Apply3}
                        alt="Modern tech icon"
                        class="apply-img"
                    />
                </div>
                <p class="text-warm-gray text-sm leading-relaxed">
                    Use modern, well-supported programming languages
                </p>
            </div>
        </div>

        <div class="flex flex-wrap justify-center gap-4 mt-8">
            <a class="link-button-primary" href="/resources">
                View Data Sources
            </a>
            <a
                class="link-button-secondary"
                href="https://tally.so/r/np14jP"
                target="_blank"
                rel="noopener noreferrer">
                Submit an App
            </a>
        </div>

        <p class="text-muted text-sm mt-8">
            Questions? Contact us at{" "}
            <a
                href="mailto:it.admin@tigerapps.org"
                class="text-coral hover:text-coral-dark transition-colors">
                it.admin@tigerapps.org
            </a>
        </p>
    </div>
</section>

<style lang="postcss">
    .apply-step {
        @apply flex flex-col items-center gap-4 p-6 bg-warm-white/60 rounded-organic;
    }

    .apply-icon-wrapper {
        @apply w-24 h-24 md:w-28 md:h-28 flex items-center justify-center;
    }

    .apply-img {
        @apply w-full h-full;
    }

    .link-button-primary {
        @apply bg-coral text-white rounded-full px-6 py-3 font-medium
        hover:bg-coral-dark transition-colors duration-200 shadow-warm;
    }

    .link-button-secondary {
        @apply bg-warm-white text-charcoal border border-peach-dark/30 rounded-full px-6 py-3 font-medium
        hover:border-coral/50 hover:bg-peach/30 transition-all duration-200;
    }
</style>
